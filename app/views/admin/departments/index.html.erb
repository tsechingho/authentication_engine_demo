<h1>Listing departments</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Subdomain</th>
    <th>Layout</th>
  </tr>

<% @departments.each do |department| %>
  <tr>
    <td><%= link_to h(department.name), department_root_url(:subdomain => department.subdomain) %></td>
    <td><%=h department.description %></td>
    <td><%=h department.subdomain %></td>
    <td><%=h department.layout_name %></td>
    <td><%= link_to 'Show', admin_department_path(department) %></td>
    <td><%= link_to 'Edit', edit_admin_department_path(department) %></td>
    <td><%= link_to 'Destroy', admin_department_path(department), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

